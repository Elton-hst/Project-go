pipeline {
    agent any
     tools { 
        go '1.22.1'
    }
    
    stages {
        stage('Build') {
            steps {
                echo '***version***'
                sh 'go version'

                echo '***update project***'
                sh 'go mod tidy'

                echo '***build project***'
                sh 'go build ...'
            }
        }
        
        stage('Run Unit Tests') {
            steps {
                echo '***run tests***'
                sh 'go test'
            }
        }
    }
}