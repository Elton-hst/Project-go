pipeline {
    agent any
    
    stages {
        stage('Setup') {
            steps {
                script {
                    def root = tool type: 'go', name: '1.22'
                    withEnv(["GOROOT=${root}", "PATH+GO=${root}/bin"]) {
                        sh 'go version'
                    }
                }
            }
        }
    }
}