pipeline {
    agent any
    
    stages {
        stage('Prepare') {
            steps {
                tools {
                    go '1.22'
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'go mod download'
            }
        }
        
        stage('Build') {
            steps {
                sh 'go build -o project-go'
            }
        }
        
        stage('Run Unit Tests') {
            steps {
                sh 'go test'
            }
        }
    }
}